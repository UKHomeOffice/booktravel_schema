{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "ESP-50-CancelBookingRequest Request Schema",
  "version": "0.0.1",
  "description": "Schema for cancelling a previously requested escort booking.",
  "properties": {
    "cancellationId": {
      "type": "integer",
      "description": "Unique Id for this cancellation request - generated by RMP. There may be more than one cancellation request raised for the same booking"
    },
    "requester": {
      "$ref": "#/definitions/requester",
      "description": "Details of the person/case worker who raised this request."
    },
    "subjects": {
      "type": "array",
      "description": "The person/s for whom we need the escorts",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/subjects"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "cancellationId",
    "requester",
    "subjects"
  ],
  "definitions": {
    "requester": {
      "type": "object",
      "description": "Basic contact details.",
      "properties": {
        "requesterid": {
          "type": "string",
          "description": "Case Worker Id",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "description": "Name of the contact.",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "description": "Email address of the contact.",
          "format": "email"
        },
        "telephone": {
          "type": "string",
          "description": "Phone number of the contact.",
          "minLength": 1
        },
        "teamName": {
          "type": "string",
          "description": "Group name to contact if named contact not available.",
          "minLength": 1
        },
        "teamCode": {
          "type": "string",
          "description": "Code of the contact group.",
          "minLength": 1
        },
        "teamEmail": {
          "type": "string",
          "description": "Email address of the contact group.",
          "format": "email"
        },
        "teamTelephone": {
          "type": "string",
          "description": "Phone number of the contact group.",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "description": "Constraints requiring either telephone or team telephone to be provided.",
          "required": [
            "name",
            "email",
            "telephone",
            "teamName"
          ]
        },
        {
          "description": "Constraints requiring either telephone or team telephone to be provided.",
          "required": [
            "name",
            "email",
            "teamName",
            "teamTelephone"
          ]
        }
      ]
    },
    "subjects": {
      "type": "object",
      "description": "Subject details.",
      "properties": {
        "homeOfficeReference": {
          "type": "string",
          "description": "Home Office Reference Number",
          "minLength": 1
        },
        "portReference": {
          "type": "string",
          "description": "Port Reference Number if present",
          "minLength": 1
        },
        "nomsReference": {
          "type": "string",
          "description": "NOMS Reference Number if present",
          "minLength": 1
        },
        "prisonNumber": {
          "type": "string",
          "description": "Prison Number if any",
          "minLength": 1
        },
        "personId": {
          "type": "string",
          "description": "Person id found in the cid",
          "minLength": 1
        },
        "firstName": {
          "type": "string",
          "description": "Given Name of the subject",
          "minLength": 1
        },
        "lastName": {
          "type": "string",
          "description": "Family Name of the subject",
          "minLength": 1
        },
        "aliases": {
          "type": "string",
          "description": "Alias Names of the subject",
          "minLength": 1
        },
        "nationality": {
          "type": "string",
          "description": "Nationality of the person",
          "minLength": 1
        },
        "dateOfBirth": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
          "description": "Date in the ISO-8601 format yyyy-MM-dd"
        },
        "gender": {
          "enum": [
            "M",
            "F"
          ]
        },
        "risksPosed": {
          "description": "What risks does the person pose?",
          "enum": [
            "Self harm",
            "Suicide",
            "Escape",
            "Food and/or fluid refusal",
            "Pregnancy",
            "Disruption",
            "Serious criminal record",
            "Violence",
            "Other"
          ]
        },
        "journeyDetails": {
          "type": "object",
          "description": "Transfer Details",
          "properties": {
            "movementDate": {
              "type": "string",
              "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
              "description": "Date in the ISO-8601 format of YYYY-MM-DD"
            },
            "from": {
              "$ref": "#/definitions/address",
              "description": "Where the journey starts."
            },
            "to": {
              "$ref": "#/definitions/address",
              "description": "Where the journey ends."
            },
            "additionalInformation": {
              "type": "string",
              "description": "Movement Order Comments or any information that will help escorts"
            },
            "departureDetails": {
              "type": "object",
              "description": "This will be provided in case of Removals",
              "properties": {
                "departureDateTime": {
                  "type": "string",
                  "description": "Date in the ISO-8601 format of [YYYY]-[MM]-[DD]T[hh]:[mm]:[ss] e.g. 2018-05-01T08:37:12Z"
                },
                "destination": {
                  "type": "string",
                  "description": "The country to which the subject is going to or being taken"
                },
                "flightNumber": {
                  "type": "string",
                  "description": "The flight details of the subject"
                },
                "shipNumber": {
                  "type": "string",
                  "description": "The ship details of the subject"
                }
              },
              "required": [
                "departureDateTime",
                "destination"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "movementDate",
            "from",
            "to"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "personId",
        "firstName",
        "lastName"
      ]
    },
    "address": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine2": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine3": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine4": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "country": {
          "type": "string"
        },
        "postcode": {
          "type": "string",
          "maxLength": 10
        }
      },
      "additionalProperties": false,
      "required": [
        "addressLine1",
        "addressLine2",
        "postcode"
      ]
    }
  }
}