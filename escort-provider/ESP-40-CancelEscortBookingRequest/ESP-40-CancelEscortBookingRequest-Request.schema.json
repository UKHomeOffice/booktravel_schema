{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "ESP-40-CancelBookingRequest Request Schema",
  "version": "0.0.1",
  "description": "Schema for cancelling a previously requested escort booking.",
  "properties": {
    "cancellationId": {
      "type": "integer",
      "description": "Unique Id for this cancellation request - generated by RMP. There may be more than one cancellation request raised for the same booking"
    },
    "requester": {
      "$ref": "#/definitions/requester",
      "description": "Details of the person/case worker who raised this request."
    },
    "subjects": {
      "type": "array",
      "description": "The person/s for whom the escorts need to be cancelled. Currently it's complete cancellation for all",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/subjects"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "cancellationId",
    "requester",
    "subjects"
  ],
  "definitions": {
    "requester": {
      "type": "object",
      "properties": {
        "requesterid": {
          "type": "string",
          "description": "Case Worker Id",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "telephone": {
          "type": "string",
          "minLength": 1
        },
        "teamName": {
          "type": "string",
          "description": "Group name to contact if named contact not available.",
          "minLength": 1
        },
        "teamCode": {
          "type": "string",
          "minLength": 1
        },
        "teamEmail": {
          "type": "string",
          "format": "email"
        },
        "teamTelephone": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "description": "Constraints requiring either personal or team contact details to be provided.",
          "required": [
            "name",
            "email",
            "telephone",
            "teamName"
          ]
        },
        {
          "description": "Constraints requiring either personal or team contact details to be provided.",
          "required": [
            "name",
            "teamEmail",
            "teamTelephone",
            "teamName"
          ]
        }
      ]
    },
    "subjects": {
      "type": "object",
      "description": "Subject details for whom cancellation is requested. At present we send the lead passenger details",
      "properties": {
        "homeOfficeReference": {
          "type": "string",
          "description": "Home Office Reference Number",
          "minLength": 1
        },
        "portReference": {
          "type": "string",
          "description": "Port Reference Number if present",
          "minLength": 1
        },
        "nomsReference": {
          "type": "string",
          "description": "NOMS Reference Number if present",
          "minLength": 1
        },
        "prisonNumber": {
          "type": "string",
          "description": "Prison Number if any",
          "minLength": 1
        },
        "personId": {
          "type": "string",
          "description": "Person id found in the cid",
          "minLength": 1
        },
        "firstName": {
          "type": "string",
          "description": "Given Name of the subject including any middle name",
          "minLength": 1
        },
        "lastName": {
          "type": "string",
          "minLength": 1
        },
        "aliases": {
          "type": "array",
          "description": "Alternative Names of the subject if any",
          "items": {
            "type": "string"
          }
        },
        "nationality": {
          "type": "string",
          "description": "Nationality of the person or Standardised Nationality List PCDP",
          "minLength": 1
        },
        "dateOfBirth": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
          "description": "Date in the ISO-8601 format yyyy-MM-dd"
        },
        "gender": {
          "enum": [
            "M",
            "F"
          ]
        },
        "risksPosed": {
          "type": "array",
          "description": "What risks does the person poses or has posed in the past?",
          "items": {
            "$ref": "#/definitions/risks"
          }
        },
        "journeyDetails": {
          "type": "object",
          "description": "Transfer Details",
          "properties": {
            "movementDate": {
              "type": "string",
              "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
              "description": "Date in the ISO-8601 format of YYYY-MM-DD"
            },
            "from": {
              "$ref": "#/definitions/address",
              "description": "Where the journey starts."
            },
            "to": {
              "$ref": "#/definitions/address",
              "description": "Where the journey ends."
            },
            "additionalInformation": {
              "type": "string",
              "description": "Movement Order Comments or any information that will help escorts"
            },
            "departureDetails": {
              "type": "object",
              "description": "This will be provided in case of Removals",
              "properties": {
                "departureDateTime": {
                  "description": "Date in the ISO-8601 format of [YYYY]-[MM]-[DD]T[hh]:[mm]:[ss] e.g. 2018-05-01T08:37:12Z",
                  "type": "string",
                  "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
                },
                "destination": {
                  "type": "string",
                  "description": "The country to which the subject is going to or being taken"
                },
                "flightNumber": {
                  "type": "string",
                  "description": "The flight details of the subject"
                },
                "shipNumber": {
                  "type": "string",
                  "description": "The ship details of the subject"
                }
              },
              "required": [
                "departureDateTime",
                "destination"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "movementDate",
            "from",
            "to"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "personId",
        "firstName",
        "lastName"
      ]
    },
    "risks": {
      "properties": {
        "risksCode": {
          "type": "string",
          "description": "This may be the risk code stored in PCDP based on information from CID"
        },
        "risksDescription": {
          "type": "string",
          "description": "This is a free text"
        },
        "risksStartDate": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
          "description": "Date in the ISO-8601 format of YYYY-MM-DD for when the risk starts"
        },
        "risksEndDate": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
          "description": "Date in the ISO-8601 format of YYYY-MM-DD for when the risk ends"
        }
      },
      "additionalProperties": false,
      "required": [
        "risksCode"
      ]
    },
    "address": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine2": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine3": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "addressLine4": {
          "type": "string",
          "minLength": 1,
          "maxLength": 35
        },
        "country": {
          "type": "string"
        },
        "postcode": {
          "type": "string",
          "maxLength": 10
        }
      },
      "additionalProperties": false,
      "required": [
        "addressLine1",
        "addressLine2",
        "postcode"
      ]
    }
  }
}