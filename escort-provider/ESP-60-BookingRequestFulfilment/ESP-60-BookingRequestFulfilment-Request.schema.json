{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "ESP-60-BookingRequest Fulfilment Request Schema",
  "version": "0.0.1",
  "description": "Schema to update the RMP with movement flow for escort booking request being processed by Mitie",
  "properties": {
    "movementRef": {
      "type": "integer",
      "description": "Unique Id generated for this movement request"
    },
    "movementType": {
      "description": "Type of movement as identified in the CID",
      "enum": [
        "Occupancy",
        "Non-Occupancy",
        "Removals"
      ]
    },
    "status": {
      "description": "Declined/Supplier Cancelled should only be used by Mitie when it's above the cap. Failed will align to NotComplete",
      "enum": [
        "Accepted",
        "InPlanning",
        "InProgressEnRouteCollect",
        "InProgressArrivedCollect",
        "InProgressCompletedCollect",
        "InProgressEnRouteDrop",
        "InProgressArrivedDrop",
        "InProgressCompletedDrop",
        "InProgressStartedWait",
        "InProgressCompletedWait",
        "Complete",
        "NotComplete",
        "AuthorityCancelled",
        "SupplierCancelled"
      ]
    },
    "movementDetails": {
      "$ref": "#/definitions/movementDetailsDefinition",
      "description": "Details of the Movement Request: number of escorts, escort types, timings etc."
    }
  },
  "additionalProperties": false,
  "required": [
    "movementRef",
    "movementType",
    "status",
    "movementDetails"
  ],
  "definitions": {
    "movementDetailsDefinition": {
      "type": "object",
      "description": "Details of the Movement Request: number of escorts, escort types, timings etc.",
      "properties": {
        "numberOfEscorts": {
          "type": "integer"
        },
        "suitableCrew": {
          "type": "boolean"
        },
        "slaType": {
          "enum": [
            "1a",
            "1b",
            "2",
            "3",
            "4",
            "5",
            "6a",
            "6b",
            "6c"
          ]
        },
        "targetDate": {
          "type": "string",
          "description": "Date in the ISO-8601 format of [YYYY]-[MM]-[DD]T[hh]:[mm]:[ss] e.g. 2018-05-01T08:25:41",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "statusChangeTime": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "estEnRouteTimeCollect": {
          "type": [
            "null",
            "string"
          ],
          "description": "Date in the ISO-8601 format of [YYYY]-[MM]-[DD]T[hh]:[mm]:[ss] e.g. 2018-05-01T23:45:58",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "estArrivalTimeCollect": {
          "type": [
            "null",
            "string"
          ],
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "estEnRouteTimeWait": {
          "type": [
            "null",
            "string"
          ],
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "estArrivalTimeWait": {
          "type": [
            "null",
            "string"
          ],
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "estEnRouteTimeDrop": {
          "type": [
            "null",
            "string"
          ],
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "estArrivalTimeDrop": {
          "type": [
            "null",
            "string"
          ],
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actEnRouteTimeCollect": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actArrivalTimeCollect": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actCollectTime": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actEnRouteTimeWait": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actWaitStartTime": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actWaitEndTime": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actEnRouteTimeDrop": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actArrivalTimeDrop": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "actDropTime": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "completedTime": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "notCompleted": {
          "$ref": "#/definitions/notCompletedDefinition",
          "description": "Reasons why the Movement Request could not be completed"
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "description": "For Accepted OR Complete status which don’t require any additional information",
          "required": [
            "statusChangeTime"
          ]
        },
        {
          "description": "In Planning – movement request has been submitted to scheduler",
          "required": [
            "targetDate",
            "estEnRouteTimeCollect",
            "estArrivalTimeCollect",
            "estEnRouteTimeWait",
            "estArrivalTimeWait",
            "estEnRouteTimeDrop",
            "estArrivalTimeDrop",
            "numberOfEscorts",
            "slaType",
            "suitableCrew"
          ]
        },
        {
          "description": "In Progress - Enroute to collection",
          "required": [
            "actEnRouteTimeCollect",
            "estArrivalTimeCollect",
            "estEnRouteTimeWait",
            "estArrivalTimeWait",
            "estEnRouteTimeDrop",
            "estArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Arrived at Collection",
          "required": [
            "actArrivalTimeCollect",
            "estEnRouteTimeWait",
            "estArrivalTimeWait",
            "estEnRouteTimeDrop",
            "estArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Completed Collect is for InProgressCompletedCollect",
          "required": [
            "actCollectTime",
            "estEnRouteTimeWait",
            "estArrivalTimeWait",
            "estEnRouteTimeDrop",
            "estArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Enroute to Wait",
          "required": [
            "actEnRouteTimeWait",
            "estArrivalTimeWait",
            "estEnRouteTimeDrop",
            "estArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Started Wait",
          "required": [
            "actWaitStartTime",
            "estEnRouteTimeDrop",
            "estArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Completed Wait",
          "required": [
            "actWaitEndTime",
            "estEnRouteTimeDrop",
            "estArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Enroute Drop",
          "required": [
            "actEnRouteTimeDrop",
            "estArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Arrived Drop",
          "required": [
            "actArrivalTimeDrop"
          ]
        },
        {
          "description": "In Progress - Completed Drop",
          "required": [
            "actDropTime"
          ]
        },
        {
          "description": "Not completed/cancelled",
          "required": [
            "notCompleted"
          ]
        }
      ]
    },
    "notCompletedDefinition": {
      "type": "object",
      "description": "Reasons why the Movement Request could not be completed",
      "properties": {
        "cancelled": {
          "$ref": "#/definitions/notCompletedDetailsDefinition",
          "description": "Request cancelled details"
        },
        "failure": {
          "$ref": "#/definitions/notCompletedDetailsDefinition",
          "description": "Request failed details"
        },
        "declined": {
          "$ref": "#/definitions/notCompletedDetailsDefinition",
          "description": "Request declined details"
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "required": [
            "failure"
          ]
        },
        {
          "required": [
            "cancelled"
          ]
        },
        {
          "required": [
            "declined"
          ]
        }
      ]
    },
    "notCompletedDetailsDefinition": {
      "type": "object",
      "description": "Details of why the request could not be completed",
      "properties": {
        "time": {
          "type": "string",
          "pattern": "^\\d{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]):(0[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9])$"
        },
        "primaryReason": {
          "type": "string"
        },
        "secondaryReason": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "time",
        "primaryReason",
        "secondaryReason"
      ]
    }
  }
}