{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "ESP-30-EscortBookingRequest Request Schema",
  "version": "0.0.1",
  "description": "Schema for escort booking request sent by RMP to escort provider",
  "properties": {
    "requestId": {
      "type": "integer",
      "description": "Unique Id for this escort booking request - generated by RMP."
    },
    "requestType": {
      "description": "What type of request it is",
      "enum": [
        "Referrals",
        "Transfers",
        "Appointments",
        "Removals"
      ]
    },
    "requester": {
      "$ref": "#/definitions/requester",
      "description": "Details of the person who raised this request."
    },
    "subjects": {
      "type": "array",
      "description": "A list of the people making the journey",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/subjects"
      }
    }
  },
  "required": [
    "requestId",
    "requester",
    "requestType",
    "subjects"
  ],
  "definitions": {
    "requester": {
      "type": "object",
      "description": "Basic contact details.",
      "properties": {
        "requesterid": {
          "type": "string",
          "description": "Case Worker Id",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "description": "Name of the contact.",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "description": "Email address of the contact.",
          "format": "email"
        },
        "telephone": {
          "type": "string",
          "description": "Phone number of the contact.",
          "minLength": 1
        },
        "teamName": {
          "type": "string",
          "description": "Group name to contact if named contact not available.",
          "minLength": 1
        },
        "teamCode": {
          "type": "string",
          "description": "Code of the contact group.",
          "minLength": 1
        },
        "teamEmail": {
          "type": "string",
          "description": "Email address of the contact group.",
          "format": "email"
        },
        "teamTelephone": {
          "type": "string",
          "description": "Phone number of the contact group.",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "description": "Constraints requiring either telephone or team telephone to be provided.",
          "required": [
            "name",
            "email",
            "telephone",
            "teamName"
          ]
        },
        {
          "description": "Constraints requiring either telephone or team telephone to be provided.",
          "required": [
            "name",
            "email",
            "teamName",
            "teamTelephone"
          ]
        }
      ]
    },
    "subjects": {
      "type": "object",
      "description": "Subject details.",
      "properties": {
        "homeOfficeReference": {
          "type": "string",
          "description": "Home Office Reference Number",
          "minLength": 1
        },
        "prisonNumber": {
          "type": "string",
          "description": "Prison Number",
          "minLength": 1
        },
        "personId": {
          "type": "string",
          "description": "Person id found in the cid",
          "minLength": 1
        },
        "firstName": {
          "type": "string",
          "description": "Given Name of the subject",
          "minLength": 1
        },
        "lastName": {
          "type": "string",
          "description": "Family Name of the subject",
          "minLength": 1
        },
        "alias": {
          "type": "string",
          "description": "Alias Names of the subject",
          "minLength": 1
        },
        "nationality": {
          "type": "string",
          "description": "Nationality of the person",
          "minLength": 1
        },
        "dateOfBirth": {
          "type": "string",
          "description": "Date in the ISO-8601 format yyyy-MM-dd",
          "minLength": 1
        },
        "gender": {
          "enum": [
            "M",
            "F"
          ]
        },
        "risksPosed": {
          "description": "What risks does the person pose?",
          "enum": [
            "Self harm",
            "Suicide",
            "Escape",
            "Food and/or fluid refusal",
            "Pregnancy",
            "Disruption",
            "Serious criminal record",
            "Violence",
            "Other"
          ]
        },
        "journeyDetails": {
          "type": "object",
          "description": "Transfer Details",
          "properties": {
            "movementDate": {
              "type": "string",
              "description": "Date in the ISO-8601 format of yyyy-MM-dd"
            },
            "from": {
              "type": "string",
              "description": "Where the journey starts."
            },
            "to": {
              "type": "string",
              "description": "Where the journey ends."
            },
            "additionalInformation": {
              "type": "string",
              "description": "Movement Order Comments or any information that will help escorts"
            },
            "departureDetails": {
              "type": "object",
              "description": "This will be provided in case of Removals",
              "properties": {
                "departureDateTime": {
                  "type": "string",
                  "description": "Date in the ISO-8601 format of yyyy-MM-dd"
                },
                "destination": {
                  "type": "string"
                },
                "flightNumber": {
                  "type": "string"
                }
              },
              "required": [
                "departureDateTime",
                "destination"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "movementDate",
            "from",
            "to"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "personId",
        "firstName",
        "lastName"
      ]
    }
  }
}