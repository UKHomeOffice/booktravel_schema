{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "ESP-20-CreateEscortingRequest Request Schema",
  "version": "0.0.1",
  "description": "Schema for travel escorting request sent by RMP to escort provider",
  "properties": {
    "requestId": {
      "type": "integer",
      "description": "Unique Id for this escorting request - generated by RMP."
    },
    "requestType": {
      "description": "What type of request it is",
      "enum": [
        "Referral",
        "Transfer",
        "Appointment",
        "Return - escorted flight",
        "Return - unescorted flight",
        "Return - not detained"
      ]
    },
    "requester": {
      "$ref": "#/definitions/requester",
      "description": "Details of the person who raised this request."
    },
    "subjects": {
      "type": "array",
      "description": "A list of the people making the journey",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/subjects"
      }
    }
  },
  "required": [
    "requestId",
    "requestType",
    "requester",
    "subjects"
  ],
  "definitions": {
    "subjects": {
      "type": "object",
      "description": "Subject details.",
      "properties": {
        "homeOfficeReference": {
          "type": "string",
          "description": "Home Office Reference Number",
          "minLength": 1
        },
        "personId": {
          "type": "string",
          "description": "Person id found in the cid",
          "minLength": 1
        },
        "firstName": {
          "type": "string",
          "description": "Given Name of the subject",
          "minLength": 1
        },
        "middleName": {
          "type": "string",
          "description": "Middle Name of the subject if any"
        },
        "lastName": {
          "type": "string",
          "description": "Family Name of the subject",
          "minLength": 1
        },
        "nationality": {
          "type": "string",
          "description": "Nationality of the person",
          "minLength": 1
        },
        "dateOfBirth": {
          "type": "string",
          "description": "Date in the ISO-8601 format yyyy-MM-dd",
          "minLength": 1
        },
        "gender": {
          "enum": [
            "M",
            "F"
          ]
        },
        "travelDocument": {
          "type": "string",
          "description": "",
          "minLength": 1
        },
        "requiresMedicalEscort": {
          "type": "boolean",
          "description": "Does the person have any medical conditions that need to be taken care of during the movement?"
        },
        "requiresSecurityEscort": {
          "type": "boolean",
          "description": "Will the person have any medication on them?",
          "minLength": 1
        },
        "risksPosed": {
          "description": "What risks does the person pose?",
          "enum": [
            "Self harm",
            "Suicide",
            "Escape",
            "Food and/or fluid refusal",
            "Pregnancy",
            "Disruption",
            "Serious criminal record",
            "Violence",
            "Other"
          ]
        },
        "detentionDetails": {
          "type": "object",
          "description": "Subject details.",
          "properties": {
            "detained": {
              "type": "boolean",
              "description": "Is the person detained",
              "default": false
            },
            "detentionNotes": {
              "type": "string",
              "description": "Notes about the detention"
            }
          }
        },
        "previousFailedReturn": {
          "type": "boolean",
          "default": false
        },
        "outstandingBarriers": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "hasMedicalCondition",
        "risksPosed"
      ]
    },
    "journeyDetails": {
      "type": "object",
      "description": "Tansfer Details",
      "properties": {
        "information": {
          "type": "string",
          "description": "Any information that will help escorts"
        },
        "earliestTravelDate": {
          "description": "Date in the ISO-8601 format of yyyy-MM-dd",
          "$ref": "#/definitions/journeyDetails/appointmentLocation"
        },
        "latestTravelDate": {
          "description": "Date in the ISO-8601 format of yyyy-MM-dd",
          "$ref": "#/definitions/journeyDetails/appointmentLocation"
        },
        "from": {
          "description": "Where the journey starts.",
          "$ref": "#/definitions/journeyDetails/from"
        },
        "to": {
          "description": "Where the journey ends.",
          "$ref": "#/definitions/journeyDetails/to"
        },
        "additionalInformation": {
          "type": "string",
          "description": "Where the journey ends"
        },
        "appointmentLocation": {
          "description": "Where is the appointment",
          "$ref": "#/definitions/journeyDetails/appointmentLocation"
        },
        "appointmentDate": {
          "description": "When is the appointment date in the format yyyy-MM-dd",
          "$ref": "#/definitions/journeyDetails/appointmentDate"
        },
        "appointmentTime": {
          "description": "Where is the appointment time in the format hh:mm",
          "$ref": "#/definitions/journeyDetails/appointmentTime"
        },
        "appointmentFor": {
          "description": "Who is the appointment for?",
          "enum": [
            "Court",
            "Embassy",
            "Other"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "earliestTravelDate",
        "latestTravelDate",
        "from",
        "to"
      ]
    }
  }
}